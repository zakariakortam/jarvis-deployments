# API Configuration
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000

# Application Settings
VITE_APP_NAME=BOF SPC Monitor
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_ANALYTICS=false

# Data Refresh Intervals (milliseconds)
VITE_CHART_REFRESH_INTERVAL=5000
VITE_ALERT_CHECK_INTERVAL=10000

# SPC Configuration
VITE_DEFAULT_CONTROL_LIMIT_SIGMA=3
VITE_DEFAULT_SUBGROUP_SIZE=5
VITE_MAX_DATA_POINTS=1000

# Export Settings
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_EXCEL_EXPORT=true
VITE_ENABLE_CSV_EXPORT=true

# Security
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_2FA=false

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_ERROR_TRACKING=false
