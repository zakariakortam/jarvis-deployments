FROM node:20-alpine

# Install dependencies for node-gyp and native modules
RUN apk add --no-cache python3 make g++

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy project files
COPY . .

# Expose port
EXPOSE 5000

# Set environment variables
ENV PORT=5000
ENV HOST=0.0.0.0
ENV NODE_ENV=development

# Run command
CMD npm run dev -- --host 0.0.0.0 --base /api/preview-proxy/preview-1762136590729-pifa3c43x/