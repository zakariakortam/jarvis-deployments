{
  "name": "household-energy-optimizer",
  "version": "1.0.0",
  "description": "Comprehensive household energy optimization system with real-time monitoring and ML-driven recommendations",
  "main": "backend/src/index.js",
  "type": "module",
  "scripts": {
    "start": "node backend/dist/index.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec node --loader ts-node/esm backend/src/index.ts",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest backend/tests",
    "test:frontend": "cd frontend && npm test",
    "lint": "eslint backend/src frontend/src --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit -p backend/tsconfig.json && cd frontend && tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.0",
    "influxdb-client": "^1.33.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "cron": "^2.4.0",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.4",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "concurrently": "^8.2.0"
  },
  "keywords": ["energy", "optimization", "smart-home", "iot", "monitoring"],
  "author": "Facilis Energy Solutions",
  "license": "MIT"
}