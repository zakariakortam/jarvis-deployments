{
  "name": "city-traffic-dashboard",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready city traffic management dashboard with real-time sensor data",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port $PORT --host",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write 'src/**/*.{js,jsx,css}'",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.1.1",
    "@tanstack/react-query": "^5.28.0",
    "axios": "^1.6.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.0",
    "framer-motion": "^11.0.0",
    "leaflet": "^1.9.4",
    "leaflet.heat": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.22.0",
    "react-window": "^1.8.10",
    "recharts": "^2.12.0",
    "zod": "^3.22.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.0",
    "vite": "^5.1.0",
    "vite-plugin-compression2": "^1.0.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
